<Page
    x:Class="DentalManagerSys.Views.ViewCustomerDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DentalManagerSys.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel>
            <TextBlock Text="First Name + Surename" x:Name="PageTitle" Style="{StaticResource TitleTextBlockStyle}"></TextBlock>

            <CommandBar x:Name="PatientsCommandBar"
                        HorizontalAlignment="Stretch"
Background="Transparent"
                      
                         RelativePanel.RightOf="PageTitle"
                        RelativePanel.LeftOf="SearchBox">
                <AppBarButton
                    Icon="Contact"
                   
                    x:Uid="/Strings/SelectBarButton"
                                        IsEnabled="False"
                                       />
                <AppBarSeparator />
                <AppBarButton
                    Icon="Add"
                
                    x:Uid="/Strings/AddBarButton"
                    />
            </CommandBar>
            <AutoSuggestBox 
                x:Name="SearchBox" RelativePanel.AlignRightWithPanel="True"
                 QueryIcon="Find"
                                Width="200"
                x:Uid="/Strings/SearchAutoSuggestBox">

            </AutoSuggestBox>

            <Grid
                RelativePanel.Below="PageTitle">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition  Width="*"/>
                </Grid.ColumnDefinitions>


                <StackPanel x:Name="mobileNum" Grid.Row="0" Grid.Column="0" Margin="5">
                    <TextBlock Text="Mobile: "/>
                    <TextBox Text="000023568"/>
                </StackPanel>

                <StackPanel x:Name="email" Grid.Row="0" Grid.Column="1" Margin="5">
                    <TextBlock Text="Email: "/>
                    <TextBox Text="G00352'gmail.com"/>
                </StackPanel>

            </Grid>
            
        </RelativePanel>
      
    </Grid>


    


</Page>
