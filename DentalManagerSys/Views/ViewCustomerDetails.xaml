<Page
    x:Class="DentalManagerSys.Views.ViewCustomerDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DentalManagerSys.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel>
            <TextBlock Text="First Name + Surename" x:Name="PageTitle" Style="{StaticResource TitleTextBlockStyle}"></TextBlock>

            <CommandBar x:Name="PatientsCommandBar"
                        HorizontalAlignment="Stretch"
Background="Transparent"
                      
                         RelativePanel.RightOf="PageTitle"
                        RelativePanel.LeftOf="SearchBox">
                <AppBarButton
                    Icon="Contact"
                   
                    x:Uid="/Strings/SelectBarButton"
                                        IsEnabled="False"
                                       />
                <AppBarSeparator />
                <AppBarButton
                    Icon="Add"
                
                    x:Uid="/Strings/AddBarButton"
                    />
            </CommandBar>
            <AutoSuggestBox 
                x:Name="SearchBox" RelativePanel.AlignRightWithPanel="True"
                 QueryIcon="Find"
                                Width="200"
                x:Uid="/Strings/SearchAutoSuggestBox">

            </AutoSuggestBox>

            <Grid
                RelativePanel.Below="PageTitle">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition  Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="id" Grid.Row="0" Grid.Column="0" Margin="5">
                    <TextBlock Text="ID"/>
                    <TextBox Text="G0035"/>
                </StackPanel>
                
                <StackPanel x:Name="DOB" Grid.Row="0" Grid.Column="1" Margin="5">
                    <TextBlock Text="Date Of BIRTH"/>
                    <TextBox Text="09/25/2000"/>
                </StackPanel>

                <StackPanel x:Name="email" Grid.Row="0" Grid.Column="3" Margin="5">
                    <TextBlock Text="Email"/>
                    <TextBox Text="G00352'gmail.com"/>
                </StackPanel>

                <StackPanel x:Name="mobileNum" Grid.Row="1" Grid.Column="0" Margin="5">
                    <TextBlock Text="Mobile"/>
                    <TextBox Text="0235468"/>
                </StackPanel>

                <StackPanel x:Name="fixNum" Grid.Row="1" Grid.Column="1" Margin="5">
                    <TextBlock Text="Fix Phone"/>
                    <TextBox Text="000000"/>
                </StackPanel>

                <StackPanel x:Name="street" Grid.Row="2" Grid.Column="0" Margin="5">
                    <TextBlock Text="Street"/>
                    <TextBox Text="1 Dublin Road"/>
                </StackPanel>

                <StackPanel x:Name="city" Grid.Row="2" Grid.Column="1" Margin="5">
                    <TextBlock Text="City"/>
                    <TextBox Text="Glway"/>
                </StackPanel>

                <StackPanel x:Name="province" Grid.Row="2" Grid.Column="2" Margin="5">
                    <TextBlock Text="Province"/>
                    <TextBox Text="Co.Glway"/>
                </StackPanel>

                <StackPanel x:Name="Postocode" Grid.Row="3" Grid.Column="0" Margin="5">
                    <TextBlock Text="Post Code"/>
                    <TextBox Text="HH1 258"/>
                </StackPanel>

                <StackPanel x:Name="country" Grid.Row="3" Grid.Column="1" Margin="5">
                    <TextBlock Text="Country"/>
                    <TextBox Text="Ireland"/>
                </StackPanel>

                <StackPanel x:Name="comments" Grid.Row="4" Grid.Column="0" Margin="5" Grid.ColumnSpan="4" Grid.RowSpan="3">
                    <TextBlock Text="Comments"/>
                    <TextBox Text="Is Test Marshal"/>
                </StackPanel>

            </Grid>
            
        </RelativePanel>
      
    </Grid>


    


</Page>
