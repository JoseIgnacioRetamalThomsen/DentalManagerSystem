<Page
    x:Class="DentalManagerSys.Views.ViewAllCustomers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DentalManagerSys.Views"
     xmlns:local1="using:Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <RelativePanel>
            <TextBlock x:Uid="/Strings/ViewAllCustomerPageTitle" x:Name="PageTitle" Style="{StaticResource TitleTextBlockStyle}"></TextBlock>

            <CommandBar x:Name="PatientsCommandBar"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Loaded="PatientsCommandBar_Loaded"
                        RelativePanel.RightOf="PageTitle"
                        RelativePanel.LeftOf="SearchBox">
                <AppBarButton 
                    x:Name="ViewCustomerButton"
                    Icon="Contact"
                    Click="SelectCustomer_Button"
                    x:Uid="/Strings/SelectBarButton"
                    IsEnabled="False"/>
                <AppBarSeparator />
                <AppBarButton
                    Icon="Add"
                    Click="AddNewCustomerButton_Click"
                    x:Uid="/Strings/AddBarButton"
                    />
            </CommandBar>
            <AutoSuggestBox 
                x:Name="SearchBox" RelativePanel.AlignRightWithPanel="True"
                 QueryIcon="Find"
                                Width="200"
                x:Uid="/Strings/SearchAutoSuggestBox">

            </AutoSuggestBox>

            <Grid Margin="0,10,0,0"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.Below="PageTitle"
               
                  >
                
                <toolkit:DataGrid
                    x:Name="DataGrid"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    AutoGenerateColumns="False"
                    
                    BorderThickness="0"
                    GridLinesVisibility="None"
                 ItemsSource="{x:Bind customerList}"
                    IsReadOnly="True"
                 SelectionChanged="DataGrid_SelectionChanged"
                 >
                    <toolkit:DataGrid.Columns>
                        <toolkit:DataGridTextColumn
                            Tag="FirstName"
                            Binding="{Binding name}"
                            x:Uid="/Strings/NameDataGrid"
                            
                            />

                        <toolkit:DataGridTextColumn
                            Tag="Surname"
                            Binding="{Binding surname}"
                            x:Uid="/Strings/SurnameDataGrid"/>
                        <toolkit:DataGridTextColumn
                            Tag="ID"
                            Binding="{Binding iD}"
                            x:Uid="/Strings/IDDataGrid"/>
                        <toolkit:DataGridTextColumn
                            Tag="Email"
                            Binding="{Binding email}"
                            x:Uid="/Strings/EmailDataGrid"/>
                        <toolkit:DataGridTextColumn
                            Tag="MobileNum"
                            Binding="{Binding mobileNum}"
                            x:Uid="/Strings/MobileDataGrid"/>


                    </toolkit:DataGrid.Columns>
                </toolkit:DataGrid>
            </Grid>
        </RelativePanel>

