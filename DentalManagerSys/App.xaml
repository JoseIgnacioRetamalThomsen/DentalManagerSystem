<Application
    x:Class="DentalManagerSys.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DentalManagerSys"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <Application.Resources>
        <Style x:Key="CommandBarStyle" TargetType="CommandBar">
            <Setter Property="DefaultLabelPosition" Value="Right"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="DefaultLabelPosition" Value="Right"/>
        </Style>

        <Style x:Key="PageTitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ExpanderStyle" TargetType="toolkit:Expander">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            
        </Style>
        <Style x:Key="LoginText" TargetType="TextBlock">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="TextAlignment" Value="Center"/>

        </Style>
    </Application.Resources>

</Application>



